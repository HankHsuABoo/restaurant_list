<!-- search bar -->
<div class="container mt-5">
  <!-- search bar -->
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="Enter restaurant name or category to search..."
            value="{{keyword}}" aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-12 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurants}}
          <a href="/restaurants/{{this.id}}" class="text-secondary" style="text-decoration:none;">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="Restaurant image">
              <div class="card-body p-3">
                <h5 class="card-title">{{this.name}}</h5>
                <h6 class="card-title" style="text-decoration:underline;">{{this.category}}</h6>
                <h6 class="card-title" style="text-decoration:underline;">{{this.rating}}</h6>
              </div>
            </div>
          </a>

          {{/each}}
        </div>
      </div>
    </div>
  </div>